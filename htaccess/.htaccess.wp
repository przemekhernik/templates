RewriteEngine On

# BASIC | Redirect to https
<IfModule _mod_rewrite.c>	
    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP_HOST} !^(.*)\.test$
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# BASIC | Redirect to www
<IfModule _mod_rewrite.c>
    RewriteCond %{HTTP_HOST} ^project.test [NC]
    RewriteRule ^(.*)$ https://www.project.test/$1 [L,R=301]
</IfModule>

# BASIC | Redirect images for local env
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_HOST} ^schlup.test
    RewriteRule ^(.*)\/uploads\/(.*)$ https://schlup.swiss/$1/uploads/$2 [L,R=301,NC]
</IfModule>

# SECURITY | BasicAuth
<IfModule _mod_auth.c>
    AuthType Basic
    AuthName "Password Protected Area"
    AuthUserFile /DOCUMENT_ROOT/.htpasswd
    Require valid-user
</IfModule>

# SECURITY | Stop User Enumeration
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} ^author=([0-9]*)
    RewriteRule .* /? [L,R=302]
</IfModule>

# SECURITY | Protect system files
<FilesMatch ".htaccess|readme.html|license.txt|readme.txt|readme.md|wp-config.php|wp-config-db.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# SECURITY | Disable xmlrpc.php
<files xmlrpc.php>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</files>

# SECURITY | Disable Directory Browsing
Options -Indexes

# SECURITY | Block XSS
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule .* index.php [F,L]
</IfModule>

